{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "default": {},
  "title": "Kdoctor",
  "properties": {
    "kdoctor": {
      "type": "object",
      "default": {},
      "title": " ",
      "properties": {
        "global": {
          "type": "object",
          "default": {},
          "title": " ",
          "required": [
            "imageRegistryOverride"
          ],
          "properties": {
            "imageRegistryOverride": {
              "type": "string",
              "default": "",
              "title": "Global Image Registry"
            }
          }
        },
        "kdoctorAgent": {
          "type": "object",
          "default": {},
          "title": "Kdoctor Agent",
          "required": [
            "image",
            "service"
          ],
          "properties": {
            "image": {
              "type": "object",
              "default": {},
              "title": " ",
              "required": [
                "repository"
              ],
              "properties": {
                "repository": {
                  "type": "string",
                  "default": "",
                  "title": "agent repository"
                }
              }
            },
            "service": {
              "type": "object",
              "default": {},
              "title": " ",
              "required": [
                "type"
              ],
              "properties": {
                "type": {
                  "type": "string",
                  "default": "",
                  "title": "agent service type",
                  "enum": [
                    "LoadBalancer",
                    "NodePort",
                    "ClusterIP"
                  ]
                }
              }
            },
            "podAnnotations": {
              "type": "object",
              "default": {},
              "title": "agent podA nnotations",
              "required": [],
              "properties": {}
            }
          }
        },
        "kdoctorController": {
          "type": "object",
          "default": {},
          "title": "Kdoctor Controller",
          "required": [
            "image"
          ],
          "properties": {
            "image": {
              "type": "object",
              "default": {},
              "title": " ",
              "required": [
                "repository"
              ],
              "properties": {
                "repository": {
                  "type": "string",
                  "default": "",
                  "title": "controller image repository"
                }
              }
            }
          }
        },
        "feature": {
          "type": "object",
          "default": {},
          "title": "Features",
          "required": [
            "enableIPv4",
            "enableIPv6",
            "nethttp_defaultRequest_MaxQps",
            "crdMaxHistory",
            "aggregateReport"
          ],
          "properties": {
            "enableIPv4": {
              "type": "boolean",
              "default": true,
              "title": "Enable IPv4"
            },
            "enableIPv6": {
              "type": "boolean",
              "default": false,
              "title": "Enable IPv6"
            },
            "nethttp_defaultRequest_MaxQps": {
              "type": "integer",
              "default": 100,
              "title": "Nethttp Max Qps"
            },
            "crdMaxHistory": {
              "type": "integer",
              "default": 10,
              "title": "Crd Max History records"
            },
            "aggregateReport": {
              "type": "object",
              "default": {},
              "title": "Aggregate Report",
              "required": [
                "enabled",
                "controller"
              ],
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": true,
                  "title": "Enable Aggregate"
                },
                "controller": {
                  "type": "object",
                  "default": {},
                  "title": " ",
                  "required": [
                    "reportHostPath",
                    "maxAgeInDay",
                    "pvc"
                  ],
                  "properties": {
                    "reportHostPath": {
                      "type": "string",
                      "default": "",
                      "title": "Host Path of controller report"
                    },
                    "maxAgeInDay": {
                      "type": "integer",
                      "default": 30,
                      "title": "report max age in day"
                    },
                    "pvc": {
                      "type": "object",
                      "default": {},
                      "title": "Controller PVC",
                      "required": [
                        "enabled",
                        "storageClass",
                        "storageRequests",
                        "storageLimits"
                      ],
                      "properties": {
                        "enabled": {
                          "type": "boolean",
                          "default": false,
                          "title": "Enable PVC"
                        },
                        "storageClass": {
                          "type": "string",
                          "default": "",
                          "title": "storageClass"
                        },
                        "storageRequests": {
                          "type": "string",
                          "default": "",
                          "title": "PVC Requests"
                        },
                        "storageLimits": {
                          "type": "string",
                          "default": "",
                          "title": "Storage Limits"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}