{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "multus": {
            "type": "object",
            "title": "Multus Configuration",
            "properties": {
                "config": {
                    "type": "object",
                    "properties": {
                        "cni_conf": {
                            "type": "object",
                            "properties": {
                                "clusterNetwork": {
                                    "type": "string",
                                    "title": "Default CNI",
                                    "description": "Multus requires that you have first installed a Kubernetes CNI plugin to serve as your pod-to-pod network(calico or cilium)",
                                    "default": "calico",
                                    "enum": [
                                        "calico",
                                        "cilium"
                                    ]
                                }
                            }
                        }
                    }
                },
                "image": {
                    "type": "object",
                    "title": "Image Configuration",
                    "properties": {
                        "repository": {
                            "type": "string",
                            "title": "Repository",
                            "default": "ghcr.m.daocloud.io/k8snetworkplumbingwg/multus-cni"
                        }
                    }
                }
            }
        },
        "overlay_subnet": {
            "type": "object",
            "title": "Cluster Network CIDR",
            "description": "Configure the cluster network CIDR, Including service-CIDR and pod-CIDR.",
            "properties": {
                "service_subnet": {
                    "type": "object",
                    "title": "Service CIDR",
                    "properties": {
                        "ipv4": {
                            "type": "string",
                            "title": "*IPv4"
                        },
                        "ipv6": {
                            "type": "string",
                            "title": "IPv6",
                            "description": "Service IPv6 CIDR(optional)"
                        }
                    }
                },
                "pod_subnet": {
                    "type": "object",
                    "title": "Pod CIDR",
                    "description": "The network CIDR of Default CNI(calico or cilium).",
                    "properties": {
                        "ipv4": {
                            "type": "array",
                            "title": "*IPv4",
                            "items": {
                                "type": "string"
                            }
                        },
                        "ipv6": {
                            "type": "array",
                            "title": "IPv6",
                            "items": {
                                "type": "string"
                            },
                            "description": "Pod IPv6 Subnet(optional)"
                        }
                    }
                }
            }
        },
        "macvlan": {
            "type": "object",
            "title": "Macvlan Install Configuration",
            "properties": {
                "enable": {
                    "type": "boolean"
                },
                "type": {
                    "type": "string",
                    "title": "Type",
                    "default": "macvlan-overlay",
                    "description": "\"macvlan-overlay\" indicates that two NICs will be assigned to the pod, including macvlan and the NIC assigned to the pod by the default cni. \"macvlan-standalone\" indicates that only one NIC with macvlan will be assigned to the pod.",
                    "enum": [
                        "macvlan-overlay",
                        "macvlan-standalone"
                    ]
                },
                "name": {
                    "type": "string",
                    "title": "Name",
                    "default": "macvlan-overlay"
                },
                "master": {
                    "type": "string",
                    "title": "Master Interface",
                    "default": "ens192",
                    "description": "NOTE: The master interface must be exist on the host"
                },
                "vlanID": {
                    "type": "integer",
                    "description": "Indicates which vlan subnet the macvlan pod belongs to, Optionally, default is 0.",
                    "default": 0,
                    "minimum": 0,
                    "maximum": 4094
                }
            }
        },
        "sriov": {
            "type": "object",
            "title": "SRIOV Install Configuration",
            "description": "SR-IOV CNI plugin works with SR-IOV device plugin for VF allocation in Kubernetes",
            "properties": {
                "manifests": {
                    "type": "object",
                    "properties": {
                        "enable": {
                            "type": "boolean"
                        }
                    }
                },
                "images": {
                    "type": "object",
                    "title": "Image Configuration",
                    "properties": {
                        "sriovCni": {
                            "type": "object",
                            "title": "SRIOV-CNI",
                            "properties": {
                                "repository": {
                                    "type": "string",
                                    "title": "Repository",
                                    "default": "ghcr.m.daocloud.io/k8snetworkplumbingwg/sriov-cni"
                                }
                            }
                        },
                        "sriovDevicePlugin": {
                            "type": "object",
                            "title": "SRIOV Device Plugin",
                            "properties": {
                                "repository": {
                                    "type": "string",
                                    "title": "Repository",
                                    "default": "ghcr.m.daocloud.io/k8snetworkplumbingwg/sriov-network-device-plugin"
                                }
                            }
                        }
                    }
                },
                "sriov_crd": {
                    "type": "object",
                    "title": "SRIOV Multus-CRs Configuration",
                    "properties": {
                        "enable": {
                            "type": "boolean"
                        },
                        "resourceName": {
                            "type": "string",
                            "title": "ResourceName",
                            "description": "You must be provide resourceName when Sriov-CNI enabled(just like \"intel.com/mlnx_sriov_rdma\"). Multus require specific device information which maybe pre-allocated by K8s device plugin. This could be indicated by providing `k8s.v1.cni.cncf.io/resourceName` annotation in its network attachment definition CRD"
                        },
                        "type": {
                            "type": "string",
                            "title": "Type",
                            "description": "\"sriov-overlay\" indicates that two NICs will be assigned to the pod, including sriov and the NIC assigned to the pod by the default cni. \"sriov-standalone\" indicates that only one NIC with sriov will be assigned to the pod.",
                            "default": "sriov-overlay",
                            "enum": [
                                "sriov-overlay",
                                "sriov-standalone"
                            ]
                        },
                        "name": {
                            "type": "string",
                            "title": "Name"
                        },
                        "vlanID": {
                            "type": "integer",
                            "description": "Indicates which vlan subnet the sriov pod belongs to.Optionally, default is 0.",
                            "default": 0,
                            "minimum": 0,
                            "maximum": 4094
                        }
                    }
                }
            }
        },
        "meta-plugins": {
            "type": "object",
            "title": "Install Underlay Meta-CNI Plugins",
            "description": "meta cni-plugins works with underlay-cni to solve the communication problem of underlay-cni",
            "properties": {
                "image": {
                    "type": "object",
                    "title": "Image Configuration",
                    "properties": {
                        "repository": {
                            "type": "string",
                            "title": "Repository",
                            "default": "ghcr.m.daocloud.io/spidernet-io/cni-plugins/meta-plugins"
                        }
                    }
                }
            }
        }
    }
}