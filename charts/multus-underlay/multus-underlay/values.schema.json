{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "multus": {
            "type": "object",
            "title": "Multus Configuration",
            "properties": {
                "config": {
                    "type": "object",
                    "title": " ",
                    "properties": {
                        "cni_conf": {
                            "type": "object",
                            "title": "Default CNI Settings",
                            "properties": {
                                "clusterNetwork": {
                                    "type": "string",
                                    "title": "Default CNI",
                                    "description": "Notice: make sure the selected CNI has been installed in the cluster",
                                    "default": "calico",
                                    "enum": [
                                        "calico",
                                        "cilium"
                                    ]
                                }
                            }
                        }
                    }
                },
                "image": {
                    "type": "object",
                    "title": "Multus Image",
                    "properties": {
                        "repository": {
                            "type": "string",
                            "title": "Repository",
                            "default": "ghcr.m.daocloud.io/k8snetworkplumbingwg/multus-cni"
                        }
                    }
                }
            }
        },
        "overlay_subnet": {
            "type": "object",
            "title": "Cluster Network CIDR",
            "description": "Configure the cluster network CIDR, Including service-CIDR and pod-CIDR.",
            "properties": {
                "service_subnet": {
                    "type": "object",
                    "title": "Service ClusterIP CIDR",
                    "properties": {
                        "ipv4": {
                            "type": "string",
                            "title": "IPv4 Subnet",
                            "description": "input subnet format like '172.16.0.0/16'"
                        },
                        "ipv6": {
                            "type": "string",
                            "title": "IPv6 Subnet",
                            "description": "input subnet format like 'fd01::/64'"
                        }
                    }
                },
                "pod_subnet": {
                    "type": "object",
                    "title": "Pod CIDR",
                    "description": "The POD CIDR of Default CNI (calico or cilium).",
                    "properties": {
                        "ipv4": {
                            "type": "array",
                            "title": "IPv4 Subnet",
                            "description": "for each item, input subnet format like '172.17.0.0/16'",
                            "items": {
                                "type": "string"
                            }
                        },
                        "ipv6": {
                            "type": "array",
                            "title": "IPv6 Subnet",
                            "description": "for each item, input subnet format like 'fd01::/64'",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "macvlan": {
            "type": "object",
            "title": "Macvlan CNI Settings",
            "properties": {
                "enable": {
                    "type": "boolean",
                    "title": "Install Macvlan CNI"
                },
                "type": {
                    "type": "string",
                    "title": "Macvlan Type",
                    "default": "macvlan-overlay",
                    "description": "The \"macvlan-overlay\" mode is used for the pod with overlay and macvlan interface. The \"macvlan-standalone\" mode is just used for the pod with macvlan interface.",
                    "enum": [
                        "macvlan-overlay",
                        "macvlan-standalone"
                    ]
                },
                "name": {
                    "type": "string",
                    "title": "Multus CR Name"
                },
                "master": {
                    "type": "string",
                    "title": "Master Interface",
                    "default": "ens192",
                    "description": "Notice: The master interface must exist on the host"
                },
                "vlanID": {
                    "type": "integer",
                    "title": "Vlan ID",
                    "description": "the vlan id of the master interface",
                    "default": 0,
                    "minimum": 0,
                    "maximum": 4094
                }
            }
        },
        "sriov": {
            "type": "object",
            "title": "SRIOV CNI Settings",
            "description": "The CNI requires the physical interface who supports SR-IOV feature.",
            "properties": {
                "manifests": {
                    "type": "object",
                    "title": " ",
                    "properties": {
                        "enable": {
                            "title": "Install SRIOV CNI",
                            "description": "Notice: please do not install SRIOV and Macvlan at the same time.",
                            "type": "boolean"
                        }
                    }
                },
                "images": {
                    "type": "object",
                    "title": "Image Configuration",
                    "properties": {
                        "sriovCni": {
                            "type": "object",
                            "title": "SRIOV CNI Image",
                            "properties": {
                                "repository": {
                                    "type": "string",
                                    "title": "Repository",
                                    "default": "ghcr.m.daocloud.io/k8snetworkplumbingwg/sriov-cni"
                                }
                            }
                        },
                        "sriovDevicePlugin": {
                            "type": "object",
                            "title": "SRIOV Device Plugin Image",
                            "properties": {
                                "repository": {
                                    "type": "string",
                                    "title": "Repository",
                                    "default": "ghcr.m.daocloud.io/k8snetworkplumbingwg/sriov-network-device-plugin"
                                }
                            }
                        }
                    }
                },
                "sriov_crd": {
                    "type": "object",
                    "title": "SRIOV Multus-CRs Configuration",
                    "properties": {
                        "resourceName": {
                            "type": "string",
                            "title": "Resource Name",
                            "description": "You must be provide resourceName when Sriov-CNI enabled(just like \"intel.com/mlnx_sriov_rdma\"). Multus require specific device information which maybe pre-allocated by K8s device plugin. This could be indicated by providing `k8s.v1.cni.cncf.io/resourceName` annotation in its network attachment definition CRD"
                        },
                        "type": {
                            "type": "string",
                            "title": "SRIOV Type",
                            "description": "The \"sriov-overlay\" mode is used for the pod with overlay and sriov interface. The \"sriov-standalone\" mode is just used for the pod with sriov interface.",
                            "default": "sriov-overlay",
                            "enum": [
                                "sriov-overlay",
                                "sriov-standalone"
                            ]
                        },
                        "name": {
                            "type": "string",
                            "title": "Multus CR Name"
                        },
                        "vlanID": {
                            "type": "integer",
                            "title": "Vlan ID",
                            "description": "what vlan sriov interface belongs to. Optionally, default is 0.",
                            "default": 0,
                            "minimum": 0,
                            "maximum": 4094
                        }
                    }
                }
            }
        },
        "meta-plugins": {
            "type": "object",
            "title": "Underlay Meta-CNI Plugins",
            "description": "meta cni-plugins works with underlay CNI to solve the communication problem of underlay-cni",
            "properties": {
                "image": {
                    "type": "object",
                    "title": "Image Configuration",
                    "properties": {
                        "repository": {
                            "type": "string",
                            "title": "Repository",
                            "default": "ghcr.m.daocloud.io/spidernet-io/cni-plugins/meta-plugins"
                        }
                    }
                }
            }
        }
    }
}