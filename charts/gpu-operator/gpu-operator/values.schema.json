{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "gpu-operator": {
            "type": "object",
            "properties": {
                "devicePlugin": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                },
                "driver": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "image": {
                            "type": "string"
                        },
                        "repository": {
                            "type": "string"
                        },
                        "version": {
                            "type": "string"
                        },
                        "repoConfig": {
                            "type": "object",
                            "properties": {
                                "configMapName": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "migManager": {
                    "type": "object",
                    "properties": {
                        "config": {
                            "type": "object",
                            "properties": {
                                "default": {
                                    "type": "string"
                                },
                                "name": {
                                    "type": "string"
                                }
                            }
                        },
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                },
                "mig": {
                    "type": "object",
                    "properties": {
                        "strategy": {
                            "type": "string",
                            "enum": [
                                "single",
                                "mixed"
                            ]
                        }
                    }
                },
                "node-feature-discovery": {
                    "type": "object",
                    "properties": {
                        "enableNodeFeatureApi": {
                            "type": "boolean"
                        }
                    }
                }
            }
        }
    }
}
