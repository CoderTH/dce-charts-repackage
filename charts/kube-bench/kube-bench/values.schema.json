{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "kube-bench": {
            "type": "object",
            "properties": {
                "affinity": {
                    "type": "object"
                },
                "concurrencyPolicy": {
                    "type": "string"
                },
                "cronjob": {
                    "type": "object",
                    "properties": {
                        "command": {
                            "type": "array"
                        },
                        "schedule": {
                            "type": "string"
                        }
                    }
                },
                "image": {
                    "type": "object",
                    "properties": {
                        "pullPolicy": {
                            "type": "string"
                        },
                        "repository": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                },
                "nodeSelector": {
                    "type": "object"
                },
                "provider": {
                    "type": "string"
                },
                "resources": {
                    "type": "object"
                },
                "serviceAccount": {
                    "type": "object",
                    "properties": {
                        "annotations": {
                            "type": "object"
                        },
                        "create": {
                            "type": "boolean"
                        }
                    }
                },
                "tolerations": {
                    "type": "array"
                }
            }
        }
    }
}
