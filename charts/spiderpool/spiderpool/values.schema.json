{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "spiderpool": {
      "title": "The spiderpool Schema",
      "type": "object",
      "properties": {
        "global": {
          "title": "Global Setting",
          "type": "object",
          "default": {},
          "required": [
            "imageRegistryOverride"
          ],
          "properties": {
            "imageRegistryOverride": {
              "title": "global image Registry",
              "type": "string",
              "default": "ghcr.m.daocloud.io",
              "examples": [ "ghcr.m.daocloud.io" ]
            }
          }
        },
        "spiderpoolAgent": {
          "title": "Spiderpool Agent Setting",
          "description": "spiderpool agent is a daemonset",
          "type": "object",
          "default": {},
          "properties": {
            "image": {
              "title": "Spiderpool Agent Image",
              "type": "object",
              "default": {},
              "required": [
                "repository"
              ],
              "properties": {
                "repository": {
                  "title": "repository",
                  "type": "string",
                  "default": "spidernet-io/spiderpool/spiderpool-agent",
                  "examples": [
                    "spidernet-io/spiderpool/spiderpool-agent"
                  ]
                }
              }
            },
            "resources": {
              "title": "Spiderpool Agent Resources",
              "type": "object",
              "default": {},
              "properties": {
                "limits": {
                  "title": "Resources Limits",
                  "type": "object",
                  "default": {},
                  "required": [
                    "cpu",
                    "memory"
                  ],
                  "properties": {
                    "cpu": {
                      "title": "CPU limits",
                      "type": "string",
                      "default": "1000m",
                      "examples": [
                        "1000m"
                      ]
                    },
                    "memory": {
                      "title": "memory limits",
                      "type": "string",
                      "default": "1024Mi",
                      "examples": [
                        "1024Mi"
                      ]
                    }
                  }
                },
                "requests": {
                  "title": "Resources Requests",
                  "type": "object",
                  "default": {},
                  "required": [
                    "cpu",
                    "memory"
                  ],
                  "properties": {
                    "cpu": {
                      "title": "CPU requests",
                      "type": "string",
                      "default": "100m",
                      "examples": [
                        "100m"
                      ]
                    },
                    "memory": {
                      "title": "Memory requests",
                      "type": "string",
                      "default": "128Mi",
                      "examples": [
                        "128Mi"
                      ]
                    }
                  }
                }
              }
            },
            "prometheus": {
              "title": "Spiderpool Agent Prometheus Setting",
              "type": "object",
              "default": {},
              "required": [
                "enabled"
              ],
              "properties": {
                "enabled": {
                  "title": "Enable Metrics",
                  "type": "boolean",
                  "description": "enable metrics feature on spiderpool agent pod",
                  "default": true,
                  "examples": [
                    false
                  ]
                },
                "serviceMonitor": {
                  "title": "Spiderpool Agent ServiceMonitor",
                  "type": "object",
                  "default": {},
                  "required": [
                    "install"
                  ],
                  "properties": {
                    "install": {
                      "title": "Install",
                      "description": "install ServiceMonitor CR for spiderpool agent. Notice: It is required to install Prometheus CRDs firstly",
                      "type": "boolean",
                      "default": false,
                      "examples": [
                        false
                      ]
                    }
                  }
                },
                "prometheusRule": {
                  "title": "Spiderpool Agent PrometheusRule",
                  "type": "object",
                  "default": {},
                  "required": [
                    "install"
                  ],
                  "properties": {
                    "install": {
                      "title": "Install",
                      "type": "boolean",
                      "description": "install PrometheusRule CR for spiderpool agent. Notice: It is required to install Prometheus CRDs firstly",
                      "default": false,
                      "examples": [
                        false
                      ]
                    }
                  }
                }
              }
            }
          }
        },
        "spiderpoolController": {
          "title": "Spiderpool Controller Setting",
          "description": "spiderpool controller is a deployment",
          "type": "object",
          "default": {},
          "required": [
            "replicas"
          ],
          "properties": {
            "replicas": {
              "title": "replicas number",
              "type": "integer",
              "default": 1,
              "minimum": 1,
              "examples": [
                1
              ]
            },
            "image": {
              "title": "Spiderpool Controller Image",
              "type": "object",
              "default": {},
              "required": [
                "repository"
              ],
              "properties": {
                "repository": {
                  "title": "repository",
                  "type": "string",
                  "default": "spidernet-io/spiderpool/spiderpool-controller"
                }
              }
            },
            "resources": {
              "title": "Spiderpool Controller Resources",
              "type": "object",
              "default": {},
              "properties": {
                "limits": {
                  "title": "Limits Setting",
                  "type": "object",
                  "default": {},
                  "required": [
                    "cpu",
                    "memory"
                  ],
                  "properties": {
                    "cpu": {
                      "title": "CPU Limits",
                      "type": "string",
                      "default": "500m"
                    },
                    "memory": {
                      "title": "Memory Limits",
                      "type": "string",
                      "default": "1024Mi"
                    }
                  }
                },
                "requests": {
                  "title": "Requests Setting",
                  "type": "object",
                  "default": {},
                  "required": [
                    "cpu",
                    "memory"
                  ],
                  "properties": {
                    "cpu": {
                      "title": "CPU Requests",
                      "type": "string",
                      "default": "100m"
                    },
                    "memory": {
                      "title": "Memory Requests",
                      "type": "string",
                      "default": "128Mi"
                    }
                  }
                }
              }
            },
            "prometheus": {
              "title": "Spiderpool Controller Prometheus Setting",
              "type": "object",
              "default": {},
              "required": [
                "enabled"
              ],
              "properties": {
                "enabled": {
                  "title": "Enable Metrics",
                  "description": "enable metrics feature on spiderpool controller pod",
                  "type": "boolean",
                  "default": true,
                  "examples": [
                    false
                  ]
                },
                "serviceMonitor": {
                  "title": "Spiderpool Controller ServiceMonitor",
                  "type": "object",
                  "default": {},
                  "required": [
                    "install"
                  ],
                  "properties": {
                    "install": {
                      "title": "Install",
                      "type": "boolean",
                      "description": "install serviceMonitor CR for spiderpool controller. Notice: It is required to install Prometheus CRDs firstly",
                      "default": false,
                      "examples": [
                        false
                      ]
                    }
                  },
                  "examples": [{
                    "install": false
                  }]
                },
                "prometheusRule": {
                  "title": "Spiderpool Controller PrometheusRule",
                  "type": "object",
                  "default": {},
                  "required": [
                    "install"
                  ],
                  "properties": {
                    "install": {
                      "title": "Install",
                      "description": "install PrometheusRule CR for spiderpool controller. Notice: It is required to install Prometheus CRDs firstly",
                      "type": "boolean",
                      "default": false,
                      "examples": [
                        false
                      ]
                    }
                  },
                  "examples": [{
                    "install": false
                  }]
                }
              }
            }
          }
        },
        "feature": {
          "title": "IP Family Setting",
          "type": "object",
          "default": {},
          "required": [
            "enableIPv4",
            "enableIPv6"
          ],
          "properties": {
            "enableIPv4": {
              "title": "enable IPv4",
              "description": "enable IPAM IPv4 feature. Notice: required to create IPv4 ippool",
              "type": "boolean",
              "default": false,
              "examples": [
                true
              ]
            },
            "enableIPv6": {
              "title": "enable IPv6",
              "description": "enable IPAM IPv6 feature. Notice: required to create IPv6 ippool",
              "type": "boolean",
              "default": false,
              "examples": [
                true
              ]
            }
          }
        },
        "clusterDefaultPool": {
          "title": "Cluster Default Ippool Installation",
          "type": "object",
          "default": {},
          "required": [
            "installIPv4IPPool",
            "installIPv6IPPool"
          ],
          "properties": {
            "installIPv4IPPool": {
              "title": "install default IPv4 ippool",
              "description": "when 'enable IPv4', required to install IPv4 ippool",
              "type": "boolean",
              "default": false,
              "examples": [
                false
              ]
            },
            "installIPv6IPPool": {
              "title": "install default IPv6 ippool",
              "description": "when 'enable IPv6', required to install IPv6 ippool",
              "type": "boolean",
              "default": false,
              "examples": [
                false
              ]
            },
            "ipv4IPPoolName": {
              "title": "the name of default IPv4 ippool",
              "type": "string",
              "default": "default-v4-ippool",
              "examples": [
                "default-v4-ippool"
              ]
            },
            "ipv6IPPoolName": {
              "title": "the name of default IPv6 ippool",
              "type": "string",
              "default": "default-v6-ippool",
              "examples": [
                "default-v6-ippool"
              ]
            },
            "ipv4Subnet": {
              "title": "IPv4 Subnet for default IPv4 ippool",
              "type": "string",
              "default": "",
              "examples": [
                "192.168.1.0/24"
              ]
            },
            "ipv6Subnet": {
              "title": "IPv6 Subnet for default IPv6 ippool",
              "type": "string",
              "default": "",
              "examples": [
                "fd00::/64"
              ]
            },
            "ipv4IPRanges": {
              "title": "IP Ranges for default IPv4 ippool",
              "type": "array",
              "description": "each item could be range format like '192.168.0.10-192.168.0.100', or comma format like '192.168.0.10,192.168.0.11,192.168.0.12'. Notice: all IP address must belong to ipv4Subnet",
              "default": [],
              "items": {
                "type": "string"
              },
              "examples": [
                ["192.168.1.10-192.168.1.200"]
              ]
            },
            "ipv6IPRanges": {
              "title": "IP Ranges for default IPv6 ippool",
              "type": "array",
              "description": "each item could be range format like 'fd00::10-fd00::200', or comma format like 'fd00::10,fd00::20,fd00::30'. Notice: all IP address must belong to ipv6Subnet ",
              "default": [],
              "items": {
                "type": "string"
              },
              "examples": [
                ["fd00::10-fd00::200"]
              ]
            }
          }
        }
      }
    }
  }
}
