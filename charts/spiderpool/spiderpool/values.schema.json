{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "spiderpool": {
      "title": "The spiderpool Schema",
      "type": "object",
      "properties": {
        "global": {
          "title": "Global Setting",
          "type": "object",
          "default": {},
          "required": [
            "imageRegistryOverride"
          ],
          "properties": {
            "imageRegistryOverride": {
              "title": "global image Registry",
              "type": "string",
              "default": "ghcr.io",
              "examples": [ "ghcr.io" ]
            }
          }
        },
        "spiderpoolAgent": {
          "title": "Spiderpool Agent Setting",
          "type": "object",
          "default": {},
          "properties": {
            "image": {
              "title": "Image Setting",
              "type": "object",
              "default": {},
              "required": [
                "repository"
              ],
              "properties": {
                "repository": {
                  "title": "repository",
                  "type": "string",
                  "default": "spidernet-io/spiderpool/spiderpool-agent",
                  "examples": [
                    "spidernet-io/spiderpool/spiderpool-agent"
                  ]
                }
              }
            },
            "resources": {
              "title": "Resources Setting",
              "type": "object",
              "default": {},
              "properties": {
                "limits": {
                  "title": "limits",
                  "type": "object",
                  "default": {},
                  "required": [
                    "cpu",
                    "memory"
                  ],
                  "properties": {
                    "cpu": {
                      "title": "CPU limits",
                      "type": "string",
                      "default": "1000m",
                      "examples": [
                        "1000m"
                      ]
                    },
                    "memory": {
                      "title": "memory limits",
                      "type": "string",
                      "default": "1024Mi",
                      "examples": [
                        "1024Mi"
                      ]
                    }
                  }
                },
                "requests": {
                  "title": "Requests Setting",
                  "type": "object",
                  "default": {},
                  "required": [
                    "cpu",
                    "memory"
                  ],
                  "properties": {
                    "cpu": {
                      "title": "CPU requests",
                      "type": "string",
                      "default": "100m",
                      "examples": [
                        "100m"
                      ]
                    },
                    "memory": {
                      "title": "Memory requests",
                      "type": "string",
                      "default": "128Mi",
                      "examples": [
                        "128Mi"
                      ]
                    }
                  }
                }
              }
            },
            "prometheus": {
              "title": "Spiderpool Agent Prometheus Setting",
              "type": "object",
              "default": {},
              "required": [
                "enabled"
              ],
              "properties": {
                "enabled": {
                  "title": "enable metrics",
                  "type": "boolean",
                  "default": true,
                  "examples": [
                    false
                  ]
                },
                "serviceMonitor": {
                  "title": "ServiceMonitor Setting",
                  "type": "object",
                  "default": {},
                  "required": [
                    "install"
                  ],
                  "properties": {
                    "install": {
                      "title": "Install",
                      "type": "boolean",
                      "default": false,
                      "examples": [
                        false
                      ]
                    }
                  }
                },
                "prometheusRule": {
                  "title": "PrometheusRule Setting",
                  "type": "object",
                  "default": {},
                  "required": [
                    "install"
                  ],
                  "properties": {
                    "install": {
                      "title": "Install",
                      "type": "boolean",
                      "default": false,
                      "examples": [
                        false
                      ]
                    }
                  }
                },
                "grafanaDashboard": {
                  "title": "GrafanaDashboard Setting",
                  "type": "object",
                  "default": {},
                  "required": [
                    "install"
                  ],
                  "properties": {
                    "install": {
                      "title": "Install",
                      "type": "boolean",
                      "default": false,
                      "examples": [
                        false
                      ]
                    }
                  }
                }
              }
            }
          }
        },
        "spiderpoolController": {
          "title": "Spiderpool Controller Setting",
          "type": "object",
          "default": {},
          "required": [
            "replicas"
          ],
          "properties": {
            "replicas": {
              "title": "replicas number",
              "type": "integer",
              "default": 1,
              "minimum": 1,
              "examples": [
                1
              ]
            },
            "image": {
              "title": "Image Setting",
              "type": "object",
              "default": {},
              "required": [
                "repository"
              ],
              "properties": {
                "repository": {
                  "title": "repository",
                  "type": "string",
                  "default": "spidernet-io/spiderpool/spiderpool-controller"
                }
              }
            },
            "resources": {
              "title": "Resources Setting",
              "type": "object",
              "default": {},
              "properties": {
                "limits": {
                  "title": "Limits Setting",
                  "type": "object",
                  "default": {},
                  "required": [
                    "cpu",
                    "memory"
                  ],
                  "properties": {
                    "cpu": {
                      "title": "CPU Limits",
                      "type": "string",
                      "default": "500m"
                    },
                    "memory": {
                      "title": "Memory Limits",
                      "type": "string",
                      "default": "1024Mi"
                    }
                  }
                },
                "requests": {
                  "title": "Requests Setting",
                  "type": "object",
                  "default": {},
                  "required": [
                    "cpu",
                    "memory"
                  ],
                  "properties": {
                    "cpu": {
                      "title": "CPU Requests",
                      "type": "string",
                      "default": "100m"
                    },
                    "memory": {
                      "title": "Memory Requests",
                      "type": "string",
                      "default": "128Mi"
                    }
                  }
                }
              }
            },
            "prometheus": {
              "title": "Spiderpool Controller Prometheus Setting",
              "type": "object",
              "default": {},
              "required": [
                "enabled"
              ],
              "properties": {
                "enabled": {
                  "title": "Enable Metrics",
                  "type": "boolean",
                  "default": true,
                  "examples": [
                    false
                  ]
                },
                "serviceMonitor": {
                  "title": "serviceMonitor",
                  "type": "object",
                  "default": {},
                  "required": [
                    "install"
                  ],
                  "properties": {
                    "install": {
                      "title": "Install",
                      "type": "boolean",
                      "default": false,
                      "examples": [
                        false
                      ]
                    }
                  },
                  "examples": [{
                    "install": false
                  }]
                },
                "prometheusRule": {
                  "title": "prometheusRule",
                  "type": "object",
                  "default": {},
                  "required": [
                    "install"
                  ],
                  "properties": {
                    "install": {
                      "title": "Install",
                      "type": "boolean",
                      "default": false,
                      "examples": [
                        false
                      ]
                    }
                  },
                  "examples": [{
                    "install": false
                  }]
                },
                "grafanaDashboard": {
                  "title": "GrafanaDashboard Setting",
                  "type": "object",
                  "default": {},
                  "required": [
                    "install"
                  ],
                  "properties": {
                    "install": {
                      "title": "Install",
                      "type": "boolean",
                      "default": false,
                      "examples": [
                        false
                      ]
                    }
                  }
                }
              }
            }
          }
        },
        "feature": {
          "title": "Feature Setting",
          "type": "object",
          "default": {},
          "required": [
            "enableIPv4",
            "enableIPv6"
          ],
          "properties": {
            "enableIPv4": {
              "title": "enable IPv4",
              "type": "boolean",
              "default": false,
              "examples": [
                true
              ]
            },
            "enableIPv6": {
              "title": "enable IPv6",
              "type": "boolean",
              "default": false,
              "examples": [
                true
              ]
            }
          }
        },
        "clusterDefaultPool": {
          "title": "Cluster Default Pool Installation",
          "type": "object",
          "default": {},
          "required": [
            "installIPv4IPPool",
            "installIPv6IPPool",
            "ipv4IPPoolName",
            "ipv6IPPoolName",
            "ipv4Subnet",
            "ipv6Subnet",
            "ipv4IPRanges",
            "ipv6IPRanges"
          ],
          "properties": {
            "installIPv4IPPool": {
              "title": "install default ipv4 ippool",
              "type": "boolean",
              "default": false,
              "examples": [
                false
              ]
            },
            "installIPv6IPPool": {
              "title": "install default ipv6 ippool",
              "type": "boolean",
              "default": false,
              "examples": [
                false
              ]
            },
            "ipv4IPPoolName": {
              "title": "the name of default ipv4 ippool",
              "type": "string",
              "default": "default-v4-ippool",
              "examples": [
                "default-v4-ippool"
              ]
            },
            "ipv6IPPoolName": {
              "title": "the name of default ipv6 ippool",
              "type": "string",
              "default": "default-v6-ippool",
              "examples": [
                "default-v6-ippool"
              ]
            },
            "ipv4Subnet": {
              "title": "ipv4 Subnet for default ipv4 ippool",
              "type": "string",
              "pattern": "^[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}/[0-9]+$",
              "default": "",
              "examples": [
                "192.168.1.0/24"
              ]
            },
            "ipv6Subnet": {
              "title": "ipv6 Subnet for default ipv6 ippool",
              "type": "string",
              "default": "",
              "examples": [
                "fd00::/64"
              ]
            },
            "ipv4IPRanges": {
              "title": "IP Ranges for default ipv4 ippool",
              "type": "array",
              "default": [],
              "items": {
                "type": "string"
              },
              "examples": [
                ["192.168.1.10-192.168.1.200"]
              ]
            },
            "ipv6IPRanges": {
              "title": "IP Ranges for default ipv6 ippool",
              "type": "array",
              "default": [],
              "items": {
                "type": "string"
              },
              "examples": [
                ["fd00::10-fd00::200"]
              ]
            }
          }
        }
      }
    }
  }
}