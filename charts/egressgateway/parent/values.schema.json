{
  "$schema": "https://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "egressgateway": {
      "type": "object",
      "properties": {
        "feature": {
          "type": "object",
          "properties": {
            "enableIPv4": {
              "type": "boolean",
              "title": "Enable IPv4",
              "default": true
            },
            "enableIPv6": {
              "type": "boolean",
              "title": "Enable IPv6",
              "default": false,
              "description": "Turn on this option to enable dual-stack egress network, but note that the Pod network must be dual-stack for this to work properly."
            },
            "tunnelIpv4Subnet": {
              "type": "string",
              "title": "Tunnel IPv4 subnet",
              "default": "172.31.0.0/16",
              "description": "The tunnel subnet for IPv4 must not overlap with the CIDR in the cluster."
            },
            "tunnelIpv6Subnet": {
              "type": "string",
              "title": "Tunnel IPv6 subnet",
              "default": "fd11::/112",
              "description": "If the option EnableIPv6 is turned on, you need to enter the tunnel subnet for IPv6, which must not overlap with the CIDR in the cluster."
            },
            "vxlan": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "default": "egress.vxlan",
                  "title": "VXLAN name"
                },
                "port": {
                  "type": "integer",
                  "default": 7789,
                  "title": "VXLAN port"
                },
                "id": {
                  "type": "integer",
                  "title": "VXLAN ID",
                  "default": 100
                },
                "disableChecksumOffload": {
                  "type": "boolean",
                  "title": "Disable checksum offload",
                  "default": true
                }
              },
              "title": "VXLAN setting",
              "required": []
            },
            "iptables": {
              "type": "object",
              "title": "iptables setting",
              "properties": {
                "backendMode": {
                  "type": "string",
                  "enum": [
                    "auto",
                    "nft",
                    "legacy"
                  ],
                  "default": "auto",
                  "title": "Backend mode",
                  "description": "You can check the current mode of iptables by running “iptables –version” on the cluster host."
                }
              },
              "required": []
            }
          },
          "title": "Feature"
        },
        "controller": {
          "type": "object",
          "properties": {
            "image": {
              "type": "object",
              "properties": {
                "registry": {
                  "type": "string",
                  "title": "Image registry",
                  "default": "ghcr.m.daocloud.io"
                }
              },
              "title": "Image setting",
              "required": []
            },
            "debug": {
              "type": "object",
              "title": "Debug setting",
              "properties": {
                "logLevel": {
                  "type": "string",
                  "title": "Log level",
                  "default": "info",
                  "enum": [
                    "debug",
                    "info",
                    "warn",
                    "error",
                    "fatal",
                    "panic"
                  ]
                }
              }
            },
            "prometheus": {
              "type": "object",
              "properties": {
                "serviceMonitor": {
                  "type": "object",
                  "properties": {
                    "install": {
                      "type": "boolean",
                      "title": "Install",
                      "default": false
                    }
                  },
                  "title": "ServiceMonitor setting"
                }
              },
              "title": "Prometheus setting"
            }
          },
          "title": "Controller setting"
        },
        "agent": {
          "type": "object",
          "properties": {
            "image": {
              "type": "object",
              "properties": {
                "registry": {
                  "type": "string",
                  "title": "Image registry",
                  "default": "ghcr.m.daocloud.io"
                }
              },
              "title": "Image setting"
            },
            "debug": {
              "type": "object",
              "title": "Debug setting",
              "properties": {
                "logLevel": {
                  "type": "string",
                  "title": "Log level",
                  "default": "info",
                  "enum": [
                    "debug",
                    "info",
                    "warn",
                    "error",
                    "fatal",
                    "panic"
                  ]
                }
              }
            },
            "prometheus": {
              "type": "object",
              "properties": {
                "serviceMonitor": {
                  "type": "object",
                  "properties": {
                    "install": {
                      "type": "boolean",
                      "title": "Install",
                      "default": false
                    }
                  },
                  "title": "ServiceMonitor setting"
                }
              },
              "title": "Prometheus setting"
            }
          },
          "title": "Agent setting"
        }
      },
      "title": "Egress Gateway"
    }
  }
}